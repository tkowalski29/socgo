{{define "content"}}
<div class="space-y-8">
    <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Providers</h1>
        <p class="text-gray-600">Connect your social media accounts</p>
    </div>

    <!-- Connected Providers -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Connected Accounts</h2>
        <div id="connected-providers" 
             hx-get="/providers" 
             hx-trigger="load"
             hx-target="this">
            <div class="text-center text-gray-500">
                <span class="htmx-indicator inline">Loading connected providers...</span>
            </div>
        </div>
    </div>

    <!-- Available Providers -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Available Providers</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Facebook -->
            <div class="border rounded-lg p-6 text-center">
                <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-white text-2xl font-bold">f</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Facebook</h3>
                <p class="text-gray-600 mb-4">Connect your Facebook account to post updates</p>
                <button 
                    hx-get="/connect/facebook" 
                    class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors">
                    Connect Facebook
                </button>
            </div>

            <!-- Instagram -->
            <div class="border rounded-lg p-6 text-center">
                <div class="w-16 h-16 bg-gradient-to-br from-purple-600 to-pink-600 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-white text-2xl font-bold">ðŸ“·</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Instagram</h3>
                <p class="text-gray-600 mb-4">Share photos and stories on Instagram</p>
                <button 
                    hx-get="/connect/instagram" 
                    class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-2 px-4 rounded transition-colors">
                    Connect Instagram
                </button>
            </div>

            <!-- TikTok -->
            <div class="border rounded-lg p-6 text-center">
                <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="text-white text-2xl font-bold">â™ª</span>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">TikTok</h3>
                <p class="text-gray-600 mb-4">Create and share short videos on TikTok</p>
                <button 
                    hx-get="/connect/tiktok" 
                    class="bg-black hover:bg-gray-800 text-white font-bold py-2 px-4 rounded transition-colors">
                    Connect TikTok
                </button>
            </div>
        </div>
    </div>

    <!-- Provider Status Info -->
    <div class="bg-blue-50 border-l-4 border-blue-400 p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm text-blue-700">
                    <strong>Info:</strong> You need to connect at least one provider to start posting content. Each provider requires OAuth authentication for security.
                </p>
            </div>
        </div>
    </div>
</div>
{{end}}