{{define "content"}}
<div class="space-y-8">
    <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Create Post</h1>
        <p class="text-gray-600">Share your content across social media platforms</p>
    </div>

    <!-- Post Creation Form -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">New Post</h2>
        
        <form 
            action="/posts" 
            method="POST"
            hx-post="/posts" 
            hx-target="#form-result" 
            hx-swap="innerHTML"
            hx-on::after-request="if(event.detail.successful) this.reset()"
            class="space-y-6">
            
            <!-- Provider Selection -->
            <div>
                <label for="provider_id" class="block text-sm font-medium text-gray-700 mb-2">
                    Select Provider
                </label>
                <select 
                    name="provider_id" 
                    id="provider_id" 
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Choose a provider...</option>
                </select>
                <div class="mt-2">
                    <button 
                        type="button"
                        hx-get="/api/providers/options" 
                        hx-target="#provider_id" 
                        hx-swap="innerHTML"
                        class="text-sm text-blue-600 hover:text-blue-800">
                        Refresh providers list
                    </button>
                </div>
            </div>

            <!-- Content -->
            <div>
                <label for="content" class="block text-sm font-medium text-gray-700 mb-2">
                    Content
                </label>
                <textarea 
                    name="content" 
                    id="content" 
                    rows="4" 
                    required
                    placeholder="What's on your mind?"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
                <div class="mt-1 text-sm text-gray-500">
                    <span id="char-count">0</span> characters
                </div>
            </div>

            <!-- Scheduling Options -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    Scheduling
                </label>
                <div class="space-y-3">
                    <div class="flex items-center">
                        <input 
                            type="radio" 
                            id="post_now" 
                            name="schedule_type" 
                            value="now" 
                            checked
                            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
                        <label for="post_now" class="ml-3 block text-sm text-gray-700">
                            Post now
                        </label>
                    </div>
                    <div class="flex items-center">
                        <input 
                            type="radio" 
                            id="post_scheduled" 
                            name="schedule_type" 
                            value="scheduled"
                            class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300">
                        <label for="post_scheduled" class="ml-3 block text-sm text-gray-700">
                            Schedule for later
                        </label>
                    </div>
                </div>
            </div>

            <!-- Schedule Date/Time (hidden by default) -->
            <div id="schedule_datetime" class="hidden">
                <label for="schedule_at" class="block text-sm font-medium text-gray-700 mb-2">
                    Schedule Date & Time
                </label>
                <input 
                    type="datetime-local" 
                    name="schedule_at" 
                    id="schedule_at"
                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
            </div>

            <!-- Submit Button -->
            <div class="flex items-center justify-between">
                <button 
                    type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition-colors">
                    <span class="htmx-indicator">
                        <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                    </span>
                    Create Post
                </button>
                <button 
                    type="reset"
                    class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-6 rounded-lg transition-colors">
                    Clear
                </button>
            </div>
        </form>

        <!-- Form Result -->
        <div id="form-result" class="mt-6"></div>
    </div>

    <!-- Recent Posts -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold text-gray-800">Recent Posts</h2>
            <button 
                hx-get="/posts/history" 
                hx-target="#recent-posts"
                class="text-blue-600 hover:text-blue-800 text-sm">
                Refresh
            </button>
        </div>
        <div id="recent-posts" 
             hx-get="/posts/history?limit=10" 
             hx-trigger="load"
             hx-target="this">
            <div class="text-center text-gray-500">
                <span class="htmx-indicator inline">Loading recent posts...</span>
            </div>
        </div>
    </div>
</div>

<script>
    // Character counter
    document.getElementById('content').addEventListener('input', function() {
        document.getElementById('char-count').textContent = this.value.length;
    });

    // Show/hide schedule datetime
    document.querySelectorAll('input[name="schedule_type"]').forEach(radio => {
        radio.addEventListener('change', function() {
            const scheduleDiv = document.getElementById('schedule_datetime');
            const scheduleInput = document.getElementById('schedule_at');
            
            if (this.value === 'scheduled') {
                scheduleDiv.classList.remove('hidden');
                scheduleInput.required = true;
                // Set minimum date to now
                const now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                scheduleInput.min = now.toISOString().slice(0, 16);
            } else {
                scheduleDiv.classList.add('hidden');
                scheduleInput.required = false;
                scheduleInput.value = '';
            }
        });
    });

    // Load providers on page load
    htmx.onLoad(function() {
        htmx.ajax('GET', '/api/providers/options', {target: '#provider_id', swap: 'innerHTML'});
    });
</script>
{{end}}