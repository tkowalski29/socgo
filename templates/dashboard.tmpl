{{define "content"}}
<div class="space-y-8">
    <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Dashboard</h1>
        <p class="text-gray-600">Manage your social media presence</p>
    </div>

    <!-- Quick Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                        <span class="text-white text-sm font-bold">P</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Connected Providers</p>
                    <p class="text-2xl font-bold text-gray-900" id="provider-count" 
                       hx-get="/api/stats/providers" 
                       hx-trigger="load"
                       hx-target="this"
                       hx-swap="innerHTML">
                        <span class="htmx-indicator">...</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                        <span class="text-white text-sm font-bold">‚úì</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Published Posts</p>
                    <p class="text-2xl font-bold text-gray-900" id="published-count"
                       hx-get="/api/stats/published" 
                       hx-trigger="load"
                       hx-target="this"
                       hx-swap="innerHTML">
                        <span class="htmx-indicator">...</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                        <span class="text-white text-sm font-bold">‚è∞</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">Scheduled Posts</p>
                    <p class="text-2xl font-bold text-gray-900" id="scheduled-count"
                       hx-get="/api/stats/scheduled" 
                       hx-trigger="load"
                       hx-target="this"
                       hx-swap="innerHTML">
                        <span class="htmx-indicator">...</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center">
                        <span class="text-white text-sm font-bold">üìä</span>
                    </div>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">This Month</p>
                    <p class="text-2xl font-bold text-gray-900" id="monthly-count"
                       hx-get="/api/stats/monthly" 
                       hx-trigger="load"
                       hx-target="this"
                       hx-swap="innerHTML">
                        <span class="htmx-indicator">...</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <a href="/posts" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-4 px-6 rounded-lg text-center transition-colors">
                Create New Post
            </a>
            <a href="/providers" class="bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-lg text-center transition-colors">
                Manage Providers
            </a>
            <a href="/calendar" class="bg-purple-500 hover:bg-purple-600 text-white font-bold py-4 px-6 rounded-lg text-center transition-colors">
                View Calendar
            </a>
            <button 
                hx-get="/health" 
                hx-target="#health-status"
                class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-4 px-6 rounded-lg transition-colors">
                Check Health
            </button>
        </div>
        <div id="health-status" class="mt-4"></div>
    </div>

    <!-- Recent Activity -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-2xl font-bold text-gray-800 mb-6">Recent Activity</h2>
        <div id="recent-activity" 
             hx-get="/posts/history?limit=5" 
             hx-trigger="load"
             hx-target="this">
            <div class="text-center text-gray-500">
                <span class="htmx-indicator inline">Loading recent activity...</span>
            </div>
        </div>
    </div>
</div>
{{end}}